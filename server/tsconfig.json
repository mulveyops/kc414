{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".", // Add this
      "paths": { // Add this
        "@shared/*": ["../shared/*"]
      }
    },
    "include": ["src/**/*", "../shared/**/*", "index.ts"], // Include shared folder
    "exclude": ["node_modules"]
  }